{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch main.ts",
    "test": "STORAGE=memory deno test --allow-net --allow-read --allow-write --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": []
    }
  }
}

